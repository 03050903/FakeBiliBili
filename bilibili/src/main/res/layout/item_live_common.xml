<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/item_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_card_image_height"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:placeholderImage="@drawable/bili_default_image_tv" />

        <TextView
            android:id="@+id/tv_area_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:maxLines="2"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:textSize="13sp"
            android:layout_below="@+id/iv_cover"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/small_text_style"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tv_online"
            android:layout_toStartOf="@+id/tv_online"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_small"
            android:textColor="@color/_bkgd__gray_light" />

        <TextView
            android:id="@+id/tv_online"
            style="@style/small_text_style"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_live_count"
            android:drawablePadding="2dp"
            android:drawableTint="@color/_bkgd__gray"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_small"
            android:textColor="@color/_bkgd__gray_light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>