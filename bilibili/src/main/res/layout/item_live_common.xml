<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_next_video_placeholder"/>

        <TextView
            android:id="@+id/tv_area_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_cover"
            android:layout_marginBottom="@dimen/margin_small"
            android:maxLines="2"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/small_text_style"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tv_online"
            android:layout_toStartOf="@+id/tv_online"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_small"
            android:textColor="@color/_bkgd__gray_light" />

        <TextView
            android:id="@+id/tv_online"
            style="@style/small_text_style"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_live_count"
            android:drawablePadding="2dp"
            android:drawableTint="@color/_bkgd__gray"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_small"
            android:textColor="@color/_bkgd__gray_light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>