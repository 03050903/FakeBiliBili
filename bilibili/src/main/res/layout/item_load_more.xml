<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.common.widget.MaterialLoadingView
            android:id="@+id/loading_view"
            android:layout_width="@dimen/width_16"
            android:layout_height="@dimen/width_16"
            android:layout_gravity="center_vertical"
            app:ring_color="@color/_progress__pink"
            app:style="Large" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_32"
            android:layout_marginLeft="@dimen/margin_small"
            android:gravity="center_vertical"
            android:textColor="@color/_text__white_dark"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</RelativeLayout>